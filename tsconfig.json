{
    "compilerOptions": {
        "rootDir": "./",
        "moduleResolution": "node",
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "sourceMap": true,
        "allowSyntheticDefaultImports": true,
        "target": "es2019",
        "allowJs": true,
        "resolveJsonModule": true,
        "module": "commonjs",
        "outDir": "./js",
        "esModuleInterop": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}